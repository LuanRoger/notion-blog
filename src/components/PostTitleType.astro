---
import type { NotionDatabasePostTypeSelectProperty } from '../scripts/notion/types';
import PostType from './PostType.astro';

interface Props {
    title: string
    type?: NotionDatabasePostTypeSelectProperty | undefined
}

const { title, type } = Astro.props;
---

<div class="flex flex-row justify-center items-center align-middle space-x-5">
  <h1 class="text-4xl font-bold text-center">
    {title}
  </h1>
  {
    type &&
    <PostType text={type.select.name} />
  }
</div>
